    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "es-toolkit": "^1.39.8",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "framer-motion": "^12.23.12",
    "husky": "^9.1.7",
    "immer": "^10.1.1",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "lucide-react": "^0.536.0",
    "next": "15.4.6",
    "prettier": "^3.6.2",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-hook-form": "^7.62.0",
    "react-lottie": "^1.2.10",
    "react-vertical-timeline-component": "^3.5.3",
    "socket.io-client": "^4.8.1",
    "swiper": "^11.2.10",
    "tailwind-scrollbar": "^4.0.2",
    "tailwindcss": "^4",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-sonar-reporter": "^2.0.4",
    "wait-on": "^8.0.4",
    "zustand": "^5.0.7"
