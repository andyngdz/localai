{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LocalAI",
  "version": "0.1.0",
  "identifier": "dev.andyng.localai",
  "build": {
    "frontendDist": "../dist/renderer",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:web"
  },
  "app": {
    "windows": [
      {
        "theme": "Dark",
        "title": "LocalAI",
        "resizable": true,
        "fullscreen": false,
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "transparent": true,
        "decorations": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
